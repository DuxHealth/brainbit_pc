                                       Grid.Column="3"
                                       Text="Beta"/>
                                <Label Grid.Row="1"
                                       Grid.Column="3"
                                       x:Name="O2BetaPercentLabel"/>
                                <Label Grid.Row="2"
                                       Grid.Column="3"
                                       x:Name="O2BetaRawLabel"/>

                                <Label Grid.Row="0"
                                       Grid.Column="4"
                                       Text="Gamma"/>
                                <Label Grid.Row="1"
                                       Grid.Column="4"
                                       x:Name="O2GammaPercentLabel"/>

                            </Grid>

                            <Grid RowDefinitions="30, 30, 30"
                                  ColumnDefinitions="*,*,*">

