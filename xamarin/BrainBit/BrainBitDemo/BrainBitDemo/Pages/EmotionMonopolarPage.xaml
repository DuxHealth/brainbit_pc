                                <Label Grid.Row="2"
     Grid.Column="2"
     x:Name="T4AlphaRawLabel"/>

                                <Label Grid.Row="0"
     Grid.Column="3"
     Text="Beta"/>
                                <Label Grid.Row="1"
     Grid.Column="3"
     x:Name="T4BetaPercentLabel"/>
                                <Label Grid.Row="2"
     Grid.Column="3"
     x:Name="T4BetaRawLabel"/>

                                <Label Grid.Row="0"
     Grid.Column="4"
     Text="Gamma"/>
                                <Label Grid.Row="1"
     Grid.Column="4"
     x:Name="T4GammaPercentLabel"/>

                            </Grid>

                            <Grid RowDefinitions="30, 30, 30"
ColumnDefinitions="*,*,*">

                                <Label Grid.Row="0"
     Grid.Column="1"
     Text="Attention"></Label>
                                <Label Grid.Row="0"
     Grid.Column="2"
     Text="Relax"></Label>
                                <Label Grid.Row="1"
