<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:BrainBitDemo.Pages;assembly=BrainBitDemo"
             x:Class="BrainBitDemo.Pages.EmotionMonopolarPage">
    <ContentPage.Content>
        <Grid
            RowDefinitions="0.1*, *, 40">

            <Button Grid.Row="0"
                    Text="{Binding EmotionButtonText}"
                    Clicked="StartCalibration_Clicked"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand" />

            <ScrollView Grid.Row="1">
                <StackLayout Orientation="Vertical">
                    <Frame BackgroundColor="#FFF7ED">
                        <StackLayout Orientation="Vertical"
                                     HorizontalOptions="FillAndExpand">
                            <Label Text="O1"
                                    FontSize="Caption"/>
                            <Label Text="Calibration:"/>
                            <ProgressBar x:Name="O1CalibrationPB"
                                         ProgressColor="Orange"/>

                            <Label x:Name="O1ArtSequenceLabel"/>
                            <Label x:Name="O1ArtBothSidesLabel"/>

                            <Grid RowDefinitions="30, 30, 30"
                                  ColumnDefinitions="*, *, *, *, *">

                                <Label Grid.Row="0"
                     Grid.Column="0"
                     Text="Delta"/>
                                <Label Grid.Row="1"
                     Grid.Column="0"
                     x:Name="O1DeltaPercentLabel"/>

                                <Label Grid.Row="0"
                     Grid.Column="1"
                     Text="Theta"/>
                                <Label Grid.Row="1"
                     Grid.Column="1"
                     x:Name="O1ThetaPercentLabel"/>

                                <Label Grid.Row="0"
                     Grid.Column="2"
                     Text="Alpha"/>
                                <Label Grid.Row="1"
                     Grid.Column="2"
                     x:Name="O1AlphaPercentLabel"/>
                                <Label Grid.Row="2"
                     Grid.Column="2"
                     x:Name="O1AlphaRawLabel"/>

                                <Label Grid.Row="0"
                     Grid.Column="3"
                     Text="Beta"/>
                                <Label Grid.Row="1"
                     Grid.Column="3"
                     x:Name="O1BetaPercentLabel"/>
                                <Label Grid.Row="2"
                     Grid.Column="3"
                     x:Name="O1BetaRawLabel"/>

                                <Label Grid.Row="0"
                     Grid.Column="4"
                     Text="Gamma"/>
                                <Label Grid.Row="1"
                     Grid.Column="4"
                     x:Name="O1GammaPercentLabel"/>

                            </Grid>

                            <Grid RowDefinitions="30, 30, 30"
                ColumnDefinitions="*,*,*">

                                <Label Grid.Row="0"
                     Grid.Column="1"
                     Text="Attention"></Label>
                                <Label Grid.Row="0"
                     Grid.Column="2"
                     Text="Relax"></Label>
                                <Label Grid.Row="1"
                     Grid.Column="0"
                     Text="Percent"/>
                                <Label Grid.Row="2"
                     Grid.Column="0"
                     Text="Raw"/>

                                <Label Grid.Row="1"
                     Grid.Column="1" 
                     x:Name="O1AttentionPercentLabel"/>
                                <Label Grid.Row="2"
                     Grid.Column="1" 
                     x:Name="O1AttentionRawLabel"/>

                                <Label Grid.Row="1"
                     Grid.Column="2" 
                     x:Name="O1RelaxPercentLabel"/>
                                <Label Grid.Row="2"
                     Grid.Column="2" 
                     x:Name="O1RelaxRawLabel"/>
                            </Grid>
                        </StackLayout>
                    </Frame>

                    <Frame BackgroundColor="#FFEDDB">
                        <StackLayout Orientation="Vertical"
                                     HorizontalOptions="FillAndExpand">
                            <Label Text="O2"
                                   FontSize="Caption"/>
                            <Label Text="Calibration:"/>
                            <ProgressBar x:Name="O2CalibrationPB"
                                         ProgressColor="Orange"/>

                            <Label x:Name="O2ArtSequenceLabel"/>
