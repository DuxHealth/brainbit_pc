                                <Label Grid.Row="1"
                                       Grid.Column="2"
                                       x:Name="O2AlphaPercentLabel"/>
                                <Label Grid.Row="2"
                                       Grid.Column="2"
                                       x:Name="O2AlphaRawLabel"/>

