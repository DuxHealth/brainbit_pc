                                <Label Grid.Row="2"
     Grid.Column="2" 
     x:Name="T3RelaxRawLabel"/>
                            </Grid>
                        </StackLayout>
                    </Frame>

                    <Frame BackgroundColor="#FFDBB7">
                        <StackLayout Orientation="Vertical"
   HorizontalOptions="FillAndExpand">
                            <Label Text="T4"
 FontSize="Caption"/>
                            <Label Text="Calibration:"/>
                            <ProgressBar x:Name="T4CalibrationPB"
       ProgressColor="Orange"/>

                            <Label x:Name="T4ArtSequenceLabel"/>
                            <Label x:Name="T4ArtBothSidesLabel"/>

                            <Grid RowDefinitions="30, 30, 30"
ColumnDefinitions="*, *, *, *, *">

                                <Label Grid.Row="0"
     Grid.Column="0"
