                                <Label Grid.Row="1"
                                       Grid.Column="2" 
                                       x:Name="O2RelaxPercentLabel"/>
                                <Label Grid.Row="2"
                                       Grid.Column="2" 
                                       x:Name="O2RelaxRawLabel"/>
                            </Grid>
                        </StackLayout>
                    </Frame>

                    <Frame BackgroundColor="#FFE4C9">
                        <StackLayout Orientation="Vertical"
   HorizontalOptions="FillAndExpand">
                            <Label Text="T3"
 FontSize="Caption"/>
                            <Label Text="Calibration:"/>
                            <ProgressBar x:Name="T3CalibrationPB"
       ProgressColor="Orange"/>

                            <Label x:Name="T3ArtSequenceLabel"/>
                            <Label x:Name="T3ArtBothSidesLabel"/>

                            <Grid RowDefinitions="30, 30, 30"
ColumnDefinitions="*, *, *, *, *">

                                <Label Grid.Row="0"
     Grid.Column="0"
     Text="Delta"/>
                                <Label Grid.Row="1"
     Grid.Column="0"
     x:Name="T3DeltaPercentLabel"/>

                                <Label Grid.Row="0"
     Grid.Column="1"
     Text="Theta"/>
                                <Label Grid.Row="1"
     Grid.Column="1"
     x:Name="T3ThetaPercentLabel"/>

                                <Label Grid.Row="0"
     Grid.Column="2"
     Text="Alpha"/>
                                <Label Grid.Row="1"
     Grid.Column="2"
     x:Name="T3AlphaPercentLabel"/>
                                <Label Grid.Row="2"
     Grid.Column="2"
     x:Name="T3AlphaRawLabel"/>

                                <Label Grid.Row="0"
     Grid.Column="3"
